.generate-button {
  all: unset;
  --coord-y: 0;
  --coord-x: 0;

  --color-red: color(display-p3 0.95 0.06 0.02 / 0.3);
  --color-orange: color(display-p3 0.97 0.61 0.07 / 0.3);
  --color-olive: color(display-p3 0.83 0.87 0.04 / 0.3);
  --color-lime: color(display-p3 0.31 0.89 0.05 / 0.3);
