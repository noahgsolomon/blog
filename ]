    display: none;
  }

  &:after {
    filter: saturate(2) blur(5px);
    transform: translate(calc(calc(var(--coord-x) / 1.5) * 1px), calc(calc(var(--coord-y) / 1.5) * -1px));
    width: 180%;
    height: 180%;
